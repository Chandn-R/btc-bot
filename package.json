    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-node": "^11.1.0",
        "globals": "^16.5.0",
        "jest": "^30.2.0",
        "nodemon": "^2.0.22",
        "prettier": "^3.7.4"
